<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:lion="http://api.alacoder.com/schema/lion"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://api.alacoder.com/schema/lion http://api.alacoder.com/schema/lion.xsd">

    <!-- 业务具体实现类 -->
    <bean id="demoServiceImpl" class="com.alacoder.lion.rpc.springsupport.DemoServiceImple"/>

    <!-- 注册中心配置 使用不同注册中心需要依赖对应的jar包。如果不使用注册中心，可以把check属性改为false，忽略注册失败。-->
    <!--<lion:registry regProtocol="local" name="registry" />-->
    <!--<lion:registry regProtocol="consul" name="registry" address="127.0.0.1:8500"/>-->
    <!-- 
    <lion:registry regProtocol="direct" name="registry"  connectTimeout="2000"/>
     -->
    <lion:registry regProtocol="zookeeper" name="registry"  address="127.0.0.1:2181" connectTimeout="2000"/>

    <!-- 协议配置。为防止多个业务配置冲突，推荐使用id表示具体协议。-->
    <lion:protocol id="demoLion" default="true" name="lion"
                    maxServerConnection="80000" maxContentLength="1048576"
                    maxWorkerThread="800" minWorkerThread="20"/>

    <!-- 通用配置，多个rpc服务使用相同的基础配置. group和module定义具体的服务池。export格式为“protocol id:提供服务的端口”-->
    <lion:basicService export="demoLion:8002"
                        group="lion-demo-rpc" accessLog="false" shareChannel="true" module="lion-demo-rpc"
                        application="myLionDemo" registry="registry" id="serviceBasicConfig"/>

    <!-- 具体rpc服务配置，声明实现的接口类。-->
    <lion:service interface="com.alacoder.lion.rpc.springsupport.DemoService"
                   ref="demoServiceImpl" export="demoLion:8001" basicService="serviceBasicConfig">
    </lion:service>

</beans>
